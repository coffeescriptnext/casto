<div id="content">
  {{#if body}}
  <div id="editor">{{body}}</div>
  {{else}}
  <div id="editor">
       ______                  __
      / ____/ ____ _   _____  / /_  ____
     / /     / __ `/  / ___/ / __/ / __ \
    / /___  / /_/ /  (__  ) / /_  / /_/ /
    \____/  \__,_/  /____/  \__/  \____/  v{{version}}

      Drag and drop text file here :)
  </div>
  {{/if}}
</div>
<div id="menu">
  <ol>
    <li>{{appName}} v{{version}}</li>
    <li id="filename"><i class="fa fa-asterisk"></i> <span>{{#if filename}}{{filename}}{{else}}{{unique}}{{/if}}</span></li>
    <li id="volume"><i class="fa fa-volume-up"></i> <span>Mute</span></li>
    <li id="new"><i class="fa fa-plus-square"></i> <span>New File</span></li>
  </ol>
  <span class="powerd">
    <i class="fa fa-flash"></i> by <a href="{{apiUrl}}" target="_blank">{{apiName}}</a> and <a href="https://github.com/rendrjs/rendr" target="_blank">Rendr</a>.
  </span>
</div>
<audio preload="auto" id="added">
  <source src="/sounds/added.ogg" type="audio/ogg">
  <source src="/sounds/added.mp3" type="audio/mpeg">
</audio>
<audio preload="auto" id="removed">
  <source src="/sounds/removed.ogg" type="audio/ogg">
  <source src="/sounds/removed.mp3" type="audio/mpeg">
</audio>
<input type="file" id="file">

