[home-view]
body
  background-color: #222
  color: $casto-green
  font-family: $casto-font
  h1
    text-align: center
    margin-top: 100px
    font-weight: 300
  p
    text-align: center
    line-height: 1.8em
    margin-top: 50px
  div.start
    text-align: center
    font-weight: 300
    margin-top: 50px
    a
      text-decoration: none
      border: 1px solid $casto-green
      color: $casto-green
      padding: 10px
      border-radius: 4px
      &:hover
        background-color: $casto-green
        color: #222
