[home-view]
body
  background-color: #222
  color: $casto-green
  font-family: $casto-font
  overflow: hidden

  .home_index_view
    padding: 0
    h1
      text-align: center
      padding-top: 100px
      padding-bottom: 0
      font-weight: 300
      margin: 0
    #description-box
      text-align: center
      line-height: 14px
      height: 14px;
      padding-top: 30px
      padding-bottom: 30px
      clear: both
    #description-text
      display: none
    #typed-cursor
      opacity: 0
    div#cli-demo
      top: 0;
      position: fixed
      width: 100%
      height: 100%
      background-color: rgba(255, 255, 255, 0.1)
      z-index: 9999
      display: none
      img
        position: absolute
        top: 0;
        right: 0
        left: 0
        bottom: 0
        margin: auto
        border: 16px solid $casto-green
        width: 855px
        height: 489px
    div#cli-usage
      display: none
      width: 100%
      background-color: #333
      text-align: center
      ol
        list-style-type: none
        padding-left: 0
        li
          margin: auto
          font-size: 14px
          line-height: 18px
          width: 200px
          text-align: left
      a
        text-decoration: none
        color: $casto-green
        &:hover
          background-color: $casto-green
          color: #222
        span.last-letter
          background-color: $casto-green
          color: #222
      img
        display: none
        width: 960px
        margin: 20px
    div#button
      clear: both
      padding-top: 20px
      padding-bottom: 28px
      a
        display: inline-block
      ul#social-button
        margin: 0
        padding: 40px 0 0 0
        list-style-type: none
        text-align: center
        li
          &:first-child
            margin-right: 15px
          display: inline-block
          a
            color: $casto-green
      div#casto-button
        text-align: center
        font-weight: 300
        a
          text-decoration: none
          border: 1px solid $casto-green
          color: $casto-green
          padding: 10px 15px 10px 15px
          border-radius: 7px
          &:hover
            background-color: $casto-green
            color: #222
          &#start
            border: 1px solid $casto-green
            background-color: $casto-green
            color: #222;
            margin-right: 15px
            &:hover
              background-color: #222
              color: $casto-green
    ol#line-number
      margin: 0
      padding-top: 0
      padding-left: 4px
      padding-right: 12px
      position: absolute
      left: 0
      top: 0
      font-weight: 300
      font-size: 14px
      background-color: #272727
      color: #666
      font-family: $casto-font
      counter-reset: item
      list-style-type: none
      li
        display: block
        text-align: right
      li:before
        content: counter(item) "  "
        counter-increment: item
        height: 18px
