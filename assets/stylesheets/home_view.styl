[home-view]
body
  background-color: #222
  color: $casto-green
  font-family: $casto-font

  .home_index_view
    h1
      text-align: center
      margin-top: 100px
      font-weight: 300
      font-size: 12px
    p
      text-align: center
      line-height: 1.8em
      margin-top: 30px
    div#cli-demo
      display: none
      margin-top: 45px
      width: 100%
      img
        display: block
        width: 960px
        margin: auto
        border: 1px solid #333
    div#cli-usage
      display: none
      text-align: center
      margin-top: 45px
      width: 100%
      background-color: #333
      p
        margin: auto
        font-size: 14px
        line-height: 18px
        width: 180px
        text-align: left
        a
          text-decoration: none
          color: $casto-green
          span.last-letter
            background-color: $casto-green
            color: #222
      img
        display: none
        width: 960px
        margin: 20px
    ul#social-button
      margin: 0
      padding: 50px 0 0 0
      list-style-type: none
      text-align: center
      li
        &:first-child
          margin-right: 15px
        display: inline-block
        a
          color: $casto-green
    div#button
      text-align: center
      font-weight: 300
      margin-top: 50px
      margin-bottom: 20px
      a
        text-decoration: none
        border: 1px solid $casto-green
        color: $casto-green
        padding: 10px 15px 10px 15px
        border-radius: 7px
        &:hover
          background-color: $casto-green
          color: #222
        &#start
          border: 1px solid $casto-green
          background-color: $casto-green
          color: #222;
          margin-right: 15px
          &:hover
            background-color: #222
            color: $casto-green
    ol#line-number
      margin: 0
      padding-top: 0
      padding-left: 4px
      padding-right: 12px
      position: absolute
      left: 0
      top: 0
      font-weight: 300
      font-size: 14px
      background-color: #272727
      color: #666
      font-family: $casto-font
      counter-reset: item
      list-style-type: none
      li
        display: block
        text-align: right
      li:before
        content: counter(item) "  "
        counter-increment: item
        height: 18px
