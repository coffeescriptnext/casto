[code-view]
html
  height: 100%

  textarea:focus,
  input:focus
    outline: 0

  body
    height: 100%
    padding: 0
    margin: 0

    #content
      height: 100%
      position: absolute
      top: 0
      bottom: 20px
      width: 100%

      #editor
        font-family: $casto-font
        font-weight: 300
        overflow: scroll
        position: relative
        overflow: scroll
        background-color: #222
        font-size: 14px
        color: #ccc
        border: 0
        width: 100%
        height: 100%

        &.over
          color: $casto-green
          .ace_content span
            color: $casto-green
#menu
  position: fixed
  height: 20px
  background-color: #222
  z-index: 99999
  bottom: 0
  padding: 0 10px 0 0
  line-height: 20px
  font-size: 12px
  color: #999
  width: 100%
  ol
    display: inline-block
    padding: 0
    margin: 0
    li
      &#volume,
      &#new
        &:hover
          color: $casto-green-dark
          cursor: pointer
      font-family: $casto-font
      font-weight: 700
      margin: 0
      padding: 0 10px 0 10px
      display: table-cell
      &:first-child
        background-color: $casto-green-dark
        color: #eee
        font-weight: 300
        a
          color: #eee
          text-decoration: none
  .powerd
    float: right
    font-weight: 300
    font-family: $casto-font
    color: $casto-green-dark
    a
      color: $casto-green-dark
      text-decoration: underline

// override
.ace_gutter
  color: #666 !important

.message
  &.connected
    background-color: $casto-green-dark
  &.disconnected
    background-color: $casto-yellow-dark
    &.over
      background-color: $casto-green
  display: none
  opacity: 0.9
  z-index: 99999
  position: absolute
  padding: 30px
  top: 0
  width: 100%
  text-align: center
  color: #fff

